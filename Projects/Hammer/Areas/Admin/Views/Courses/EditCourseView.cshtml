@model Entity.Entities.CourseEntity
@{
    ViewBag.Title = "EditCourseView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Plugins/KindEditor/kindeditor-min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Plugins/KindEditor/zh_CN.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Plugins/uploadify/uploadify.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Plugins/uploadify/swfobject.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Plugins/uploadify/jquery.uploadify.js")" type="text/javascript"></script>
<script src="/Plugins/WDatePicker/WdatePicker.js" type="text/javascript"></script>
<style>
	textarea {
		display: block;
	}
</style>
<script>
    var editor;
    KindEditor.ready(function (K) {
        editor = K.create('textarea[id="Description"]', {
            resizeType: 1,
            allowPreviewEmoticons: true,
            allowImageUpload: true
        });
    });
</script>

<table class="pagetable">
    <tr>
        <td class="title">
            <span class="red">*</span>课程标题：
        </td>
        <td>
            <input type="text" col="CourseName" value="@Model.CourseName" class="textbox" validtype="required(课程标题)|maxLen(100)" />
        </td>
    </tr>
    <tr>
        <td class="title">
            <span class="red">*</span>联系方式：
        </td>
        <td>
            <input type="text" col="Contact" value="@Model.Contact" class="textbox" validtype="required(联系方式)|maxLen(20)" />
        </td>
    </tr>
    <tr>
        <td class="title">
            <span class="red">*</span>开课时间：
        </td>
        <td>
            <input type="text" col="StartDate" class="textbox" value="@Model.StartDate.Value.ToShortDateString()" onfocus="WdatePicker()" validtype="required(开课时间)" /> 至 
            <input type="text" col="EndDate" class="textbox" value="@Model.EndDate.Value.ToShortDateString()" onfocus="WdatePicker()" validtype="required(开课时间)" />
        </td>
    </tr>
    <tr>
        <td class="title">
            <span class="red">*</span>报名人数限制：
        </td>
        <td>
            <input type="text" col="CountPeople" class="textbox" value="@Model.CountPeople" validtype="required(报名人数限制)|NotZeroNum" />
        </td>
    </tr>
    <tr>
        <td class="title">
            <span class="red">*</span>课程经费：
        </td>
        <td>
            <input type="text" col="Amount" class="textbox" value="@Model.Amount" validtype="required(课程经费)|Price" />
        </td>
    </tr>
    <tr>
        <td class="title">
            <span class="red">*</span>行业：
        </td>
        <td>
            <select col="IndustryID" id="IndustryID" validtype="required(行业)">
                <option value="">请选择行业</option>
                @foreach (var item in ViewBag.Industry)
                {
                    <option value="@item.ID">@item.Name</option>
                }
            </select>
        </td>
    </tr>
    <tr>
        <td class="title">
            <span class="red">*</span>课程分类：
        </td>
        <td>
            <select col="CourseTypeID" id="CourseTypeID" validtype="required(行业)">
                <option value="">请选择课程分类</option>
                @foreach (var item in ViewBag.Type)
                {
                    <option value="@item.ID">@item.Name</option>
                }
            </select>
        </td>
    </tr>
     <tr>
        <td class="title">
            图片:
        </td>
        <td colspan="3">
            <div id="uploadify" style="height: 20px;">
            </div>
            <div id="fileQueue">
            </div>
            <div id="imgList">
            </div>
        </td>
    </tr>
    <tr>
         <td class="title">
            <span class="red">*</span>课程介绍：
        </td>
        <td>
            <textarea class="textarea" style="width: 90%; height: 300px;" id="Description"  col="Description" cols="50" rows="8">@Model.Description</textarea>
        </td>
    </tr>
    <tr>
         <td class="title">
            操作：
        </td>
        <td>
            <input type="hidden" value="@Model.ID" col="ID" />
            <input type="button" onclick="Save()" value="保存" />
        </td>
    </tr>
</table>
<script>
    $(function () {
        $("#IndustryID").val(@Model.IndustryID);
        $("#CourseTypeID").val(@Model.CourseTypeID);
        
    });
    function Save() {
        if (!$.validatebox.valid()) {
            return;
        }

        var param = $('.pagetable').GetPostData();
        var description = "";
        if (editor)
            description = editor.html();
        if (description.length > 5000) {
            alert("内容不能超过5000个字符！！");
        }
        if (description.length == 0) {
            alert("文章内容不能为空！！");
        }

        param.Description = description;
        param.Photo = JSON.stringify(imgList);

        $.U1Ajax('/admin/Courses/EditCourseJson', param, function (result) {
            if (result.Tag > 0) {
                alert('保存成功! ');
                closeSelectTab(request.QueryString("tab"));
            } else {
                alert(result.Message);
            }
        }, false);
    }

    var imgList = new Array();
    $(function () {
        var photos = '@Model.Photo';
        if (photos.length > 0) {
            htmls = photos.split(';');
            $.each(htmls, function (key, data) {
                var pic = data.split(',');
                imgList.push({ ID: pic[0], PictureUrl: pic[2], IsDefault: pic[1] });
            });
            CreateImgList();
        }
        $("#uploadify").uploadify({
            'uploader': "/Plugins/uploadify/uploadify.swf?t=" + new Date().getTime(),
            'script': "/Upload/UploadImage",
            'fileDataName': 'Filedata',
            'scriptData': { 'Type': 'CourseImage', 'ID' : '@Model.ID'},
            'cancelImg': "/Plugins/uploadify/cancel.png",
            'queueID': 'fileQueue',
            'folder': '/Content/Upload/Images/',
            'wmode': 'opaque',
            'auto': true,
            'multi': true,
            'buttonImg': "/Plugins/uploadify/UpImg.gif",
            'width': '65',
            'height': '27',
            'fileDesc': '*.gif;*.jpg;*.jpeg;*.png',
            'fileExt': '*.gif;*.jpg;*.jpeg;*.png',
            'sizeLimit': 1024 * 1024,
            'onSelect': function (e, fileObj) {
            },
            'onComplete': function (event, queueID, fileObj, response, data) {
                var obj = eval('(' + response + ')');
                AddImg(obj.ID, obj.imgUrl);
                //AddImg(obj.id, obj.imgUrl, Img.formatImageUrl(obj.imgUrl, 100, 100, 0));
            }
        });
    });

    
    //新增图片
    function AddImg(id, url) {
        if (imgList.length == 0)
            imgList.push({ ID: id, PictureUrl: url, IsDefault: "Y" });
        else
            imgList.push({ ID: id, PictureUrl: url, IsDefault: "N" });
        CreateImgList();
    }

    //置顶
    function SetTop(id) {
        if (confirm('确定要设置为默认图片？') == true) {
            for (var i = 0; i < imgList.length; i++) {
                if (imgList[i].ID == id) {
                    var n = imgList[0];
                    n.IsDefault = "N";
                    imgList[i].IsDefault = "Y";
                    imgList[0] = imgList[i];
                    imgList[i] = n;
                }
            }
            CreateImgList();
        }
    }

    //创建图片
    function CreateImgList() {
        $("#imgList").empty();
        var html = new Array();
        var max = imgList.length;
        var size = 7;
        var row = max / size;
        html.push("<table class='img_table' >");
        for (var i = 0; i < row; i++) {
            html.push("<tr>");
            for (var j = i * size; j < i * size + size; j++) {
                if (max > j) {
                    html.push("<td>");
                    html.push(Img.formatImageUrl(imgList[j].PictureUrl, 100, 100, 'border: 1px solid #C3C3C3;') + '<div style="text-align:center;" >');
                    if (imgList[j].IsDefault == "N") {
                        html.push('<a href="javascript:void(0);" onclick="SetTop(' + imgList[j].ID + ')">置顶</a> | ');
                    }
                    html.push('<a href="javascript:void(0);" onclick="DelImg(' + imgList[j].ID + ')">删除</a></div>');
                    html.push("</td>");
                } else {
                    html.push("<td></td>");
                }
            }
            html.push("</tr>");
        }
        html.push("</table>");
        $("#imgList").html(html.join(""));
    }
    //删除
    function DelImg(id) {
        if (confirm('确定删除吗？') == true) {
            imgList = removeFromArray(imgList, id);
            CreateImgList();
        }
    }

    function removeFromArray(arr, id) {
        var r = new Array();
        for (var i = 0; i < arr.length; i++) {
            if (arr[i].ID != id) {
                r.push(arr[i]);
            }
        }
        return r;
    }
</script>