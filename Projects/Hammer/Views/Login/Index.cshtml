@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@section scripts{
	<script src="/assets/plugins/bootstrap/js/bootstrap3-validation.js" type="text/javascript"></script>
	<script>
		$(function () {
			$('.form-horizontal').validation();
			$("#submit").on('click', function (event) {
				// 2.最后要调用 valid()方法。
				if ($(".form-horizontal").valid() == false) {
					$("#error-text").text("填写信息不完整。")
					return false;
				}
			})
		});
	</script>
}
<header class="page-heading clearfix">
    <h1 class="heading-title pull-left">用户注册</h1>
    <div class="breadcrumbs pull-right">
        <ul class="breadcrumbs-list">
            <li class="breadcrumbs-label">您的位置:</li>
            <li><a href="/">首页</a><i class="fa fa-angle-right"></i></li>
            <li><a href="/login">登录</a></li>
        </ul>
    </div><!--//breadcrumbs-->
</header>
<div class="page-content">
	<div class="row page-row">
		<aside class="page-sidebar col-md-2 col-sm-4 affix-top">                    
            <section class="widget">
                <ul class="nav">
                    <li><a href="/register">用户注册</a></li>
                    <li class="active"><a href="/login">登录</a></li>
                </ul>                    
            </section><!--//widget-->
        </aside>
		<!--//page-sidebar-->
		<div class="content-wrapper col-md-10 col-sm-8">
			<div class="page-row">
				<h1 class="no-margin-top has-divider text-highlight">
					登录</h1>
				<div class="row">
					<div class="col-md-8">
						<form class="form-horizontal" action="/login/Login" method="post" role="form">
						<div class="form-group">
							<label for="UserName" class="col-sm-2 control-label">
								用户名</label>
							<div class="col-sm-6">
								<input type="text" class="form-control" check-type="required" minlength="4" id="UserName" name="UserName"
									placeholder="用户名..." />
							</div>
						</div>
						<div class="form-group">
							<label for="Password" class="col-sm-2 control-label">
								密码</label>
							<div class="col-sm-6">
								<input type="password" class="form-control" check-type="required" id="Password" name="Password" placeholder="密码..." />
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<div class="checkbox">
									<label>
										<input type="checkbox">
										记住我
									</label>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<button type="submit" id="submit" class="btn btn-default">
									登录</button>
							</div>
						</div>
						</form>
					</div>
					<div class="col-md-4">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
