                                    <p class="text-center">
                                        <a href="/Courses/Detail/@item.ID" title="@item.CourseName">@item.CourseName</a>
                                    </p>
                                </div>
                                <!--//item-->
                                if (j % 2 == 0)
                                {
                                    @Html.Raw("<div class='clearfix visible-xs'></div>")
                                }
                                i++;
                            }
                        </div>
                        <!--//row-->
                    </div>
                    <div class="tab-pane" id="tab3">
                        <div class="row">
                            @{int k = 1;}
                            @foreach (var item in new EasyUI.Helpers.CourseHelper().GetCourseList().Take(4))
                            {
                                <div class="item col-md-3 col-sm-6 col-xs-6">
                                    <img class="img-responsive" src="/Content/Upload/images/@item.PictureFile" alt="@item.CourseName" />
                                    <p class="text-center">
                                        <a href="/Courses/Detail/@item.ID" title="@item.CourseName">@item.CourseName</a>
                                    </p>
                                </div>
                                <!--//item-->
                                if (k % 2 == 0)
                                {
                                    @Html.Raw("<div class='clearfix visible-xs'></div>")
                                }
                                i++;
                            }
                        </div>
                        <!--//row-->
                    </div>
                </div>
            </div>
            <!--//featured-courses-->
            <p class="text-muted page-row">
                更多分类: 摄影, 美发,</p>
            <div class="course-list-header box clearfix">
                <div class="summary pull-left">
                    <strong>89</strong> 线下课程 | <strong>68</strong> 网络课程</div>
                <div class="sort pull-right">
                    <label class="control-label pull-left">
                        排序:
                    </label>
                    <select class="sort-options form-control pull-left">
