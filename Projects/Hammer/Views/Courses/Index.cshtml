@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<header class="page-heading clearfix">
                    <h1 class="heading-title pull-left">课程列表</h1>
                    <div class="breadcrumbs pull-right">
                        <ul class="breadcrumbs-list">
                            <li class="breadcrumbs-label">您的位置:</li>
                            <li><a href="/">首页</a><i class="fa fa-angle-right"></i></li>
                            <li class="current">课程列表</li>
                        </ul>
                    </div><!--//breadcrumbs-->
                </header>
<div class="page-content">
    <div class="row page-row">
        <div class="courses-wrapper col-md-8 col-sm-7">
            <div class="featured-courses tabbed-info page-row">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab1" data-toggle="tab">推荐课程</a></li>
                    <li><a href="#tab2" data-toggle="tab">热门课程</a></li>
                    <li><a href="#tab3" data-toggle="tab">最新课程</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab1">
                        <div class="row">
                            @{int i = 1;}
                            @foreach (var item in new EasyUI.Helpers.CourseHelper().GetCourseList().Take(4))
                            {
                                <div class="item col-md-3 col-sm-6 col-xs-6">
                                    <img class="img-responsive" src="/Content/Upload/images/@item.PictureFile" alt="@item.CourseName" />
                                    <p class="text-center">
                                        <a href="/Courses/Detail/@item.ID" title="@item.CourseName">@item.CourseName</a>
                                    </p>
                                </div>
                                <!--//item-->
                                if (i % 2 == 0)
                                {
                                    @Html.Raw("<div class='clearfix visible-xs'></div>")
                                }
                                i++;
                            }
                        </div>
                        <!--//row-->
                    </div>
                    <div class="tab-pane" id="tab2">
                        <div class="row">
                            @{int j = 1;}
                            @foreach (var item in new EasyUI.Helpers.CourseHelper().GetCourseList().Take(4))
                            {
                                <div class="item col-md-3 col-sm-6 col-xs-6">
